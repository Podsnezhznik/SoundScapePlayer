<Page x:Class="Test1_Base.Pages.ChannelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test1_Base.Pages"
      mc:Ignorable="d" 
      d:MinHeight="450" d:MinWidth="800"
      Title="ChannelPage">

    <Grid>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="200">

            <Button x:Name="toStereo" Content="mono -> stereo" Margin="10" Click="toStereo_Click"/>

            <Button x:Name="toMono" Content="stereo -> mono" Margin="10" Click="toMono_Click"/>

        </StackPanel>
        
    </Grid>
</Page>
