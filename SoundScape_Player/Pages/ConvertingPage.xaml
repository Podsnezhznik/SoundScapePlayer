<Page x:Class="Test1_Base.Pages.ConvertingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test1_Base.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConvertingPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="200">

            <Button x:Name="toWav" Content=".mp3 -> .wav" Click="toWav_Click" Margin="10"/>

            <Button x:Name="toMp3" Content=".wav -> .mp3" Click="toMp3_Click" Margin="10"/>

            <Button x:Name="toAac" Content=".wav -> .aac" Click="toAac_Click" Margin="10"/>

            <Button x:Name="toWma" Content=".wav -> .wma" Click="toWma_Click" Margin="10"/>


        </StackPanel>
    </Grid>
</Page>
