<Window x:Class="Test1_Base.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test1_Base.Windows"
        mc:Ignorable="d"
        Title="О программе" Height="300" Width="330">

    <Grid>
        
        <StackPanel Background="#ffdadada">

            <TextBlock Width="300" TextWrapping="Wrap" TextAlignment="Justify"
                       Text= "SoundScape Player - бесплатное приложения для прослушивания и редактирования аудио-файлов, 
                       написанное на языке С# с использованием Windows Presentation Foundation (WPF)."/>


            <TextBlock Width="300" TextWrapping="Wrap" TextAlignment="Justify"
                       Text="Реализованы возможности: проигрывания всех типов аудио-файлов, создания плейлистов, конвертация файлов в другое расширение, извлечение аудио дорожки из видео и т.д."/>

       
        </StackPanel>

        <TextBlock TextWrapping="Wrap" VerticalAlignment="Bottom" TextAlignment="Justify" Width="300"
                       Text="Создатель: Мизюков Вячеслав Сергеевич.&#x0a;Все авторские права принадлежат создателю.&#x0a;Версия: 1.0"/>
        
    </Grid>
</Window>
